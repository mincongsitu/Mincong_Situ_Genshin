<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    android:elevation="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- simple_list_item -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_character_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:srcCompat="@drawable/test_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Character Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/iv_character_photo"
            app:layout_constraintStart_toStartOf="@id/iv_character_photo"
            app:layout_constraintEnd_toEndOf="@id/iv_character_photo"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>